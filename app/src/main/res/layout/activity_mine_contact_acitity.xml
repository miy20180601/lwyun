<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MineContactAcitity">
<include layout="@layout/common_titlebar"/>
    <View style="@style/cut_off_rule_style"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_logo"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客服电话"
        android:textColor="@color/tv_high_light"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/tv_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="96155-00"
        android:textColor="@color/tv_high_light"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"/>
</RelativeLayout>
    <View style="@style/cut_off_rule_style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服邮箱"
            android:textColor="@color/tv_high_light"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:id="@+id/tv_contact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="taobao@yahu.com"
            android:textColor="@color/tv_high_light"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <View style="@style/cut_off_rule_style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服微信"
            android:textColor="@color/tv_high_light"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:id="@+id/tv_contact_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="meixunlvshi"
            android:textColor="@color/tv_high_light"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
</LinearLayout>