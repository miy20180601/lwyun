<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context=".activity.VideoAppointmentAcitivty">
<include layout="@layout/common_titlebar"/>
    <RelativeLayout
        android:id="@+id/rl_appointment_succeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:id="@+id/recharge_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/recharge_selected"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_ok"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="预约成功"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="请详细描述您的问题，以便律师很好的为你解决问题"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:background="@color/btn_bg_color"
                android:textColor="@color/tv_high_light"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="提示"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="18sp"
                android:textColor="@color/tv_high_light"/>
            <View
                style="@style/cut_off_rule_style"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1、提交问题和上传资料；"
                android:textColor="@color/tv_high_light"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2、请提前两小时预约，如现在3：00pPM，建议选\n择5:00PM后律师发布的时间。上传完问题的资料就\n可以预约"
                android:textColor="@color/tv_high_light"
                android:layout_marginLeft="12dp"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="3dp"
                />
            <View
                style="@style/cut_off_rule_style"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="问题"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="18sp"
                android:textColor="@color/tv_high_light"/>
            <View
                style="@style/cut_off_rule_style"/>
            <EditText
                android:id="@+id/et_appointment_conetnt"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:hint="请简短输入您的咨询问题"
                android:paddingLeft="12dp"
                android:textColorHint="@color/tv_hint"
                android:paddingRight="12dp"
                android:gravity="top"/>
            <View
                style="@style/cut_off_rule_style"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="wenti"
                    android:paddingLeft="12dp"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="@color/tv_high_light"/>
                <ImageView
                    android:id="@+id/iv_appointment_accessory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/vedio_order_button_link"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    />
            </RelativeLayout>
            <View
                style="@style/cut_off_rule_style"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="预约时间"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textSize="18sp"
                android:textColor="@color/tv_high_light"/>
            <View
                style="@style/cut_off_rule_style"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_appointment_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <View
                style="@style/cut_off_rule_style"/>
            <Button
                android:id="@+id/bt_appointment_submit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp"
                android:text="确认发布"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                style="@style/button_style"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>