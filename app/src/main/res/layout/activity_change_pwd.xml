<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChangePwdActivity">
<include layout="@layout/common_titlebar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"

        android:layout_marginRight="20dp"
        android:background="@color/cut_off_rule_55_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码："
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/et_change_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginRight="12dp"
            android:hint="请输入旧密码"
            android:textSize="13sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"

        android:background="@color/cut_off_rule_55_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码："
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/et_change_newpwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginRight="12dp"
            android:hint="请输入新密码"
            android:textSize="13sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/cut_off_rule_55_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/et_change_againpwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginRight="12dp"
            android:hint="请输入确认密码"
            android:textSize="13sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/bt_change_submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_btn_bg"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:text="提交"
        android:textColor="@color/tv_high_light"
        android:layout_marginLeft="20dp"/>
</LinearLayout>