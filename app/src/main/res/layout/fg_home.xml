<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="185dp">

        <com.stx.xhb.xbanner.XBanner
            android:id="@+id/xbanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:AutoPlayTime="5000"
            app:pointContainerLeftRightPadding="5dp"
            app:pointContainerPosition="BOTTOM"
            app:pointNormal="@mipmap/xbanner_white"
            app:pointSelect="@mipmap/xbanner_red"
            app:pointsPosition="CENTER"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:drawableTop="@mipmap/index_button_contact"
                android:text="客服"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/shape_search_bg">

                <EditText
                    android:id="@+id/edit_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="搜索法律知识，寻找专业律师"
                    android:textColor="@color/tv_hint"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/index_icon_search"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:drawableTop="@mipmap/index_button_msg"
                android:text="消息"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@mipmap/img_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="智能分析精准匹配资深律师专业解答"
        android:textColor="#9FA0A0"
        android:textSize="13sp"/>

    <Button
        android:layout_width="136dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn2_bg"
        android:text="视频资讯律师"
        android:textColor="@color/tv_high_light"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/btn_bg_color">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/ll_family_affairs"
                android:layout_width="166dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_home_item_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/index_icon_family"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="婚姻家事"
                    android:textColor="@color/tv_high_light"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contractual_dispute"
                android:layout_width="166dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ll_family_affairs"
                android:background="@drawable/shape_home_item_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/index_icon_dispute"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="合同纠纷"
                    android:textColor="@color/tv_high_light"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_infringement_disputes"
                android:layout_width="166dp"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_family_affairs"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_home_item_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/index_icon_tort"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="侵权纠纷"
                    android:textColor="@color/tv_high_light"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_merger"
                android:layout_width="166dp"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_contractual_dispute"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ll_infringement_disputes"
                android:background="@drawable/shape_home_item_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/index_icon_merger"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="公司并购"
                    android:textColor="@color/tv_high_light"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_intellectual_property"
                android:layout_width="166dp"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_infringement_disputes"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_home_item_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_icon_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="知识产权"
                    android:textColor="@color/tv_high_light"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_labor_dispute"
                android:layout_width="166dp"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_merger"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ll_infringement_disputes"
                android:background="@drawable/shape_home_item_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/index_icon_labor_dispute"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="劳动争议"
                    android:textColor="@color/tv_high_light"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_securities"
                android:layout_width="166dp"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_intellectual_property"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_home_item_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/index_icon_insurance"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="证券保险"
                    android:textColor="@color/tv_high_light"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_criminal"
                android:layout_width="166dp"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_intellectual_property"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ll_securities"
                android:background="@drawable/shape_home_item_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/index_icon_criminal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="刑事及其他"
                    android:textColor="@color/tv_high_light"/>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>



</LinearLayout>