<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--底部导航栏按钮样式-->
    <style name="ControllerTab">
        <item name="android:textColor">@drawable/bottom_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!-- 分割线的的style-->
    <style name="cut_off_rule_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:textColor">@color/cut_off_rule_color</item>

    </style>
    <!-- button的style-->
    <style name="button_style">
        <item name="android:background">@drawable/shape_btn2_bg</item>
        <item name="android:textColor">@color/tv_high_light</item>

    </style>
</resources>
